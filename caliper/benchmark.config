# Benchmark Configuration File
# Source this file to set environment variables

# Number of benchmark runs
export TOTAL_RUNS=30

# Execution mode: true for parallel, false for sequential
export PARALLEL_MODE=false

# Maximum parallel runs (if PARALLEL_MODE=true)
export MAX_PARALLEL=3

# Node configuration
export NODE_TYPE="nethermind"  # "geth" or "besu"
export NODE_HTTP_ENDPOINT="http://localhost:8545"
export NODE_WS_ENDPOINT="ws://172.16.239.15:8546"

# Retry configuration
export RETRY_ATTEMPTS=3
export RETRY_DELAY=10

# Health check interval (check every N runs)
export NODE_CHECK_INTERVAL=5
